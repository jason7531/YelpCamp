<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add a new campground</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Add name" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="image" placeholder="Add image url" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="description" placeholder="Add Description" />
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>